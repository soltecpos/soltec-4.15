<output>
    <display>
        <line>
            <text align="left" length="10">Orden enviada a  P2</text>
            <text align="right" length="10">${ticket.printTotal()}</text>
        </line>
        <line>
            <text align="center" length="20">Gracias.</text>
        </line>
    </display>

    <ticket printer="2">
        <line></line>

        <line size = "1"><text bold = "true" align="right" length="12">Orden: </text>
	<text bold = "true" align="left" length="6"> ${ticket.getPickupId()}</text>
        #if (${tickettext.place} != ${place})
            <text bold = "true" align="left" length="11"> ${place}</text>
        #end </line>

        <line><text align="left" length="15">Fecha:</text><text>${ticket.printDate()}</text></line>

        #if ($ticket.getCustomer())
            <line><text align="left" length="15">Cliente:</text><text>${ticket.getCustomer().getName()}</text></line>
            <line><text align="left" length="15">Cliente #:</text><text>${ticket.getCustomer().getTaxid()}</text></line>
        #end
        
        <line><text>------------------------------------------</text></line>

        #foreach ($ticketline in $ticket.getLines())
		${ticketline.setProperty("ticket.borrable", "si")}
            #if($ticketline.printPrinter().equals("2"))
                #if($ticketline.getProperty("ticket.updated").equals("true"))
                    #if ($ticketline.isProductCom())
                        <line size="1"><text align ="left" length="24">--${ticketline.printName()}</text></line>
                    #else
                        <line size="1">
                        <text align ="left" length="5"> ${ticketline.printMultiply()}x</text>
                        <text align ="left" length="24"> ${ticketline.printName()}</text>
                        </line>
                    #end
                    <!-- un-comment line below if you want to add a product's properties -->
                    <!-- <line><text align ="left" length="42">${ticketline.getProperty("ingredients", "")}</text> </line> -->

                    <!-- un-comment line below if you want to add a user input sales line's Note -->
                    <!-- <line><text align ="left" length="42">${ticketline.getProperty("notes", "")}</text> </line> -->      

            <!-- Add the following lines only for 2.30 Attributes -->
                    #if ($ticketline.productAttSetInstId)
                        <line><text align ="left" length="29">${ticketline.productAttSetInstDesc}</text></line>
                        <line></line>
                    #end
                    ${ticketline.setProperty("ticket.updated", "false")}
                #end
            #end
        #end
        <line><text>_</text></line>
    </ticket>
</output>
